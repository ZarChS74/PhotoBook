<body>
    <center>
        <h1>Login</h1>
    </center>
    <center>
        <form action="/login" method="POST">
            <div>
                <input type="username" id="username" name="username" placeholder="Input username..." />
            </div><br>
            <div>
                <input  type="password" id="password" name="password" placeholder="Input password..." /> 
            </div><br>
            <div>
                <input type="submit" value="Login">
            </div><br>
        </form>
        <div>
            <a href="/signup"><button>Register</button> </a>
        </div>
    </center>
</body>
